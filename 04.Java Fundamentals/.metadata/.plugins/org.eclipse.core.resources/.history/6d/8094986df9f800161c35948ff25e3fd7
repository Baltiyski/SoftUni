package _01DefiningClasses.Lab;

public class BankAccount {
	private int id;
	private double balance;
	
	public void setId(int id) {
		this.id = id;
	}
	
	public double getBalance() {
		
		return this.balance;
	}
	
	public void deposti(double amount) {
		if (amount <0 ) {
			throw new IllegalArgumentException("Amount shold be non negative");
		} else {
			this.balance += amount;
		}
		
	}
	
	public void withdraw(double amount) {
		this.balance -= amount;
	}
	
	@Override
	public String toString() {
		return "ID" + this.id;
	}
	
}
